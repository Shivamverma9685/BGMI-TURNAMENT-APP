<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main2">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/bar2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/t"
            app:title="BGMI MOBILE INDIA "
            app:titleTextColor="@color/teal_200"

            ></androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/w">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"

            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview12"
                android:layout_width="@dimen/_270sdp"
                android:layout_height="@dimen/_500sdp"
                android:layout_alignParentEnd="true"

                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_50sdp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_500sdp">


                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="133dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="472dp"></ImageView>

                    <TextView
                        android:id="@+id/uploadtime2"
                        android:layout_width="338dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/password2"

                        android:layout_alignBottom="@+id/roomid2"
                        android:layout_marginStart="-1dp"
                        android:layout_marginBottom="148dp"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/reference2"
                        android:layout_width="342dp"
                        android:layout_height="wrap_content"

                        android:layout_alignBottom="@+id/roomid2"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="117dp"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/slots2"
                        android:layout_width="385dp"
                        android:layout_height="wrap_content"

                        android:layout_alignBottom="@+id/password2"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="9dp"

                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="114dp"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/category2"
                        android:layout_width="340dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/password2"

                        android:layout_alignBottom="@+id/password2"
                        android:layout_marginStart="-2dp"
                        android:layout_marginBottom="90dp"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/matchdate2"
                        android:layout_width="342dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"

                        android:layout_marginStart="9dp"
                        android:layout_marginBottom="317dp"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/roomid2"
                        android:layout_width="401dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/matchdate2"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="-1dp"
                        android:layout_marginBottom="287dp"
                        android:textColor="#77BC27"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/password2"
                        android:layout_width="401dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="260dp"
                        android:textColor="#77BC27"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/matchtype2"
                        android:layout_width="341dp"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/password2"
                        android:layout_alignParentBottom="true"

                        android:layout_marginStart="-1dp"
                        android:layout_marginBottom="162dp"
                        android:textSize="30dp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="212dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="-6dp"
                        android:layout_marginBottom="213dp"
                        android:textColor="#F6A327"
                        android:textSize="30dp"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/register2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="101dp"
                        android:layout_marginBottom="90dp"
                        android:text="REGISTER"
                        android:textSize="26dp"
                        android:textStyle="bold"></Button>

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>